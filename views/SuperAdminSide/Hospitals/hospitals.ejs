    <link href="../assets/demo/demo.css" rel="stylesheet" />
</head>

<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <div class="logo">
                <a href="/super-admin" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="../assets/img/logo-small.png">
                    </div>
                    <!-- <p>CT</p> -->
                </a>
                <a href="/super-admin" class="simple-text logo-normal">
                    Super Admin
                    <!-- <div class="logo-image-big">
            <img src="../assets/img/logo-big.png">
          </div> -->
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li>
                        <a href="/super-admin">
                            <i class="nc-icon nc-bank"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="active ">
                        <a href="/adminHospitals">
                            <i class="nc-icon nc-single-02"></i>
                            <p>Hospitals</p>
                        </a>
                    </li>
                    <li>
                        <a href="/adminDoctors">
                            <i class="nc-icon nc-circle-10"></i>
                            <p>Doctors</p>
                        </a>
                    </li>
                    <li>
                        <a href="/adminPatients">
                            <i class="nc-icon nc-calendar-60"></i>
                            <p>Patients</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand" href="/super-admin">Admin Dashboard</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
                        aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <form>
                            <div class="input-group no-border">
                                <input type="text" value="" class="form-control" placeholder="Search...">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <i class="nc-icon nc-zoom-split"></i>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="nc-icon nc-settings-gear-65"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block">Account</span>
                                    </p>
                                    <div class="dropdown-menu dropdown-menu-right"
                                        aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" href="/logout/super-admin">LOGOUT</a>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Hospitals</h4>
                                <p>
                                    <%= msg %>
                                </p>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class=" text-primary">
                                            <th>
                                                Name
                                            </th>
                                            <th>
                                                Age
                                            </th>
                                            <th>
                                                Status
                                            </th>
                                            <th class="text-right">
                                                View
                                            </th>
                                            <!-- <th class="text-right">
                                                Delete
                                            </th> -->
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <% if (hospitals.length> 0) { %>
                                                    <% hospitals.forEach(hospital=> { %>
                                                        <% const birth=hospital.dateOfEstablishment %>
                                                            <% const yob=birth.slice(0, 4) %>
                                                                <% const yobN=parseInt(yob, 10) %>
                                                                    <% const date=new Date() %>
                                                                        <% const realDate=date.getFullYear() + '-' +
                                                                            (date.getMonth() + 1) + '-' + date.getDay()
                                                                            %>
                                                                            <% const realYear=realDate.slice(0, 4) %>
                                                                                <% const now=parseInt(realYear, 10) %>
                                                                                    <% const age=now - yobN %>
                                            <tr>
                                                <td>
                                                    <%= hospital.name %>
                                                </td>
                                                <td>
                                                    <%= age %>
                                                </td>
                                                <% if (hospital.liscenceApprove==true) { %>
                                                    <td>Approved</td>
                                                    <% } else { %>
                                                        <td>Pending</td>
                                                        <% } %>
                                                            <td class="text-right"><a
                                                                    href="/viewHospital/<%= hospital._id %>">View</a>
                                                            </td>
                                                            <!-- <td class="text-right"><a
                                                                    href="/deleteHospital/<%= hospital._id %>">Delete</a>
                                                            </td> -->
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td>-----</td>
                                                        <td>-----</td>
                                                        <td>-----</td>
                                                        <!-- <td>-----</td> -->
                                                        <td class="text-right">-----</td>
                                                    </tr>
                                                    <% } %>
                                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer footer-black  footer-white ">
                <div class="container-fluid">
                    <div class="row">
                        <nav class="footer-nav">
                            <ul>
                                <li><a href="/super-admin" target="_blank">Super Admin</a></li>
                            </ul>
                        </nav>
                        <div class="credits ml-auto">
                            <span class="copyright">
                                Â©
                                <script>
                                    document.write(new Date().getFullYear())
                                </script>
                                , made with <i class="fa fa-heart heart"></i> by Ife Abraham Omoniyi
                            </span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="../assets/js/core/jquery.min.js"></script>
    <script src="../assets/js/core/popper.min.js"></script>
    <script src="../assets/js/core/bootstrap.min.js"></script>
    <script src="../assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!--  Google Maps Plugin    -->
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
    <!-- Chart JS -->
    <script src="../assets/js/plugins/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="../assets/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="../assets/js/paper-dashboard.min.js?v=2.0.1" type="text/javascript"></script>
    <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
    <script src="../assets/demo/demo.js"></script>
</body>

</html>
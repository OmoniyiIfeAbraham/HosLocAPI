<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <!-- theme meta -->
    <meta name="theme-name" content="quixlab" />

    <title>Hospital Dashboard</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="quick/images/favicon.png">
    <!-- Pignose Calender -->
    <link href="./quick/plugins/pg-calendar/css/pignose.calendar.min.css" rel="stylesheet">
    <!-- Chartist -->
    <link rel="stylesheet" href="./quick/plugins/chartist/css/chartist.min.css">
    <link rel="stylesheet" href="./quick/plugins/chartist-plugin-tooltips/css/chartist-plugin-tooltip.css">
    <!-- Custom Stylesheet -->
    <link href="quick/css/style.css" rel="stylesheet">

</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->


    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header">
            <div class="brand-logo">
                <a href="/hospital" style="color: white;">
                    <b class="logo-abbr"><img src="quick/images/logo.png" alt=""> </b>
                    <span class="logo-compact"><img src="./quick/images/logo-compact.png" alt=""></span>
                    <span class="brand-title">
                        <p>
                            <%= you.name %>
                        </p>
                    </span>
                </a>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->

        <!--**********************************
            Header start
        ***********************************-->
        <div class="header">
            <div class="header-content clearfix">

                <div class="nav-control">
                    <div class="hamburger">
                        <span class="toggle-icon"><i class="icon-menu"></i></span>
                    </div>
                </div>
                <div class="header-left">
                    <div class="input-group icons">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-transparent border-0 pr-2 pr-sm-3" id="basic-addon1"><i
                                    class="mdi mdi-magnify"></i></span>
                        </div>
                        <input type="search" class="form-control" placeholder="Search Dashboard"
                            aria-label="Search Dashboard">
                        <div class="drop-down animated flipInX d-md-none">
                            <form action="#">
                                <input type="text" class="form-control" placeholder="Search">
                            </form>
                        </div>
                    </div>
                </div>
                <div class="header-right">
                    <ul class="clearfix">
                        <li class="icons dropdown d-none d-md-flex">
                            <a href="javascript:void(0)" class="log-user" data-toggle="dropdown">
                                <span>English</span>
                            </a>
                        </li>
                        <li class="icons dropdown">
                            <div class="user-img c-pointer position-relative" data-toggle="dropdown">
                                <span class="activity active"></span>
                                <img src="<%= you.picture %>" height="40" width="40" alt="">
                            </div>
                            <div class="drop-down dropdown-profile animated fadeIn dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li>
                                            <a href="/hospital/view/<%= unique %>"><i class="icon-user"></i>
                                                <span>Profile</span></a>
                                        </li>

                                        <hr class="my-2">
                                        <li><a href="/logout/hospital"><i class="icon-key"></i> <span>Logout</span></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class="nk-sidebar">
            <div class="nk-nav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label">Dashboard</li>
                    <li>
                        <a class="has-arrow" href="/hospital" aria-expanded="false">
                            <i class="icon-speedometer menu-icon"></i><span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/viewPatients" aria-expanded="false">
                            <i class="fa fa-users"></i><span class="nav-text">Patients</span>
                        </a>
                    </li>
                    <li>
                        <a href="/viewDoctors" aria-expanded="false">
                            <i class="fa fa-book"></i><span class="nav-text">Doctors</span>
                        </a>
                    </li>
                    <li>
                        <a href="/viewBookings" aria-expanded="false">
                            <i class="fa fa-book"></i><span class="nav-text">Booking Requests</span>
                        </a>
                    </li>
                    <li>
                        <a href="/viewAppointments" aria-expanded="false">
                            <i class="fa fa-book"></i><span class="nav-text">Appointments</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="container-fluid mt-3">
                <div class="row">
                    <div class="col-lg-3 col-sm-6">
                        <div class="card gradient-1">
                            <div class="card-body">
                                <h3 class="card-title text-white">Patients</h3>
                                <div class="d-inline-block">
                                    <h2 class="text-white">
                                        <%= patients.length %>
                                    </h2>
                                    <p class="text-white mb-0"><a href="/viewPatients" style="color: white;">View</a>
                                    </p>
                                </div>
                                <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card gradient-2">
                            <div class="card-body">
                                <h3 class="card-title text-white">Doctors</h3>
                                <div class="d-inline-block">
                                    <h2 class="text-white">
                                        <%= doctors.length %>
                                    </h2>
                                    <p class="text-white mb-0"><a href="/viewDoctors" style="color: white;">View</a></p>
                                </div>
                                <span class="float-right display-5 opacity-5"><i class="fa fa-book"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card gradient-4">
                            <div class="card-body">
                                <h3 class="card-title text-white">Booking Requests</h3>
                                <div class="d-inline-block">
                                    <h2 class="text-white">
                                        <%= requests.length %>
                                    </h2>
                                    <p class="text-white mb-0"><a href="/viewBookings" style="color: white;">View</a>
                                    </p>
                                </div>
                                <span class="float-right display-5 opacity-5"><i class="fa fa-book"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="card gradient-7">
                            <div class="card-body">
                                <h3 class="card-title text-white">Appointments</h3>
                                <div class="d-inline-block">
                                    <h2 class="text-white">
                                        <%= doctors.length %>
                                    </h2>
                                    <p class="text-white mb-0"><a href="/viewAppointments"
                                            style="color: white;">View</a></p>
                                </div>
                                <span class="float-right display-5 opacity-5"><i class="fa fa-book"></i></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 col-md-6">
                        <div class="card">
                            <div class="card-body px-0">
                                <h4 class="card-title px-4 mb-3">Todo</h4>
                                <div class="todo-list">
                                    <div class="tdl-holder">
                                        <div class="tdl-content">
                                            <ul id="todo_list">
                                                <li><label><input type="checkbox"><i></i><span>Get up</span><a href='#'
                                                            class="ti-trash"></a></label></li>
                                                <li><label><input type="checkbox" checked><i></i><span>Stand up</span><a
                                                            href='#' class="ti-trash"></a></label></li>
                                                <li><label><input type="checkbox"><i></i><span>Don't give up the
                                                            fight.</span><a href='#' class="ti-trash"></a></label></li>
                                                <li><label><input type="checkbox" checked><i></i><span>Do something
                                                            else</span><a href='#' class="ti-trash"></a></label></li>
                                            </ul>
                                        </div>
                                        <div class="px-4">
                                            <input type="text" class="tdl-new form-control"
                                                placeholder="Write new item and hit 'Enter'...">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <% if (patients.length> 0) { %>
                        <% patients.forEach(patient=> { %>
                            <div class="col-lg-3 col-sm-6">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="text-center">
                                            <h5 class="mt-3 mb-1">
                                                <%= patient.name %>
                                            </h5>
                                            <p class="m-0"><a href="mailto: <%= patient.email %>">
                                                    <%= patient.email %>
                                                </a></p>
                                            <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="text-center">
                                                    <img src="./quick/images/users/8.jpg" class="rounded-circle" alt="">
                                                    <h5 class="mt-3 mb-1">Ana Liem</h5>
                                                    <p class="m-0">Senior Manager</p>
                                                    <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="text-center">
                                                    <img src="./quick/images/users/5.jpg" class="rounded-circle" alt="">
                                                    <h5 class="mt-3 mb-1">John Abraham</h5>
                                                    <p class="m-0">Store Manager</p>
                                                    <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="text-center">
                                                    <img src="./quick/images/users/7.jpg" class="rounded-circle" alt="">
                                                    <h5 class="mt-3 mb-1">John Doe</h5>
                                                    <p class="m-0">Sales Man</p>
                                                    <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="text-center">
                                                    <img src="./quick/images/users/1.jpg" class="rounded-circle" alt="">
                                                    <h5 class="mt-3 mb-1">Mehedi Titas</h5>
                                                    <p class="m-0">Online Marketer</p>
                                                    <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                </div>

            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->


        <!--**********************************
            Footer start
        ***********************************-->
        <div class="footer">
            <div class="copyright">
                <p>Copyright &copy; Designed & Developed by <a href="https://ife-portfolio.up.railway.app">Ife Abraham
                        Omoniyi</a>
                    <script>
                        document.write(new Date().getFullYear())
                    </script>
                </p>
            </div>
        </div>
        <!--**********************************
            Footer end
        ***********************************-->
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!--**********************************
        Scripts
    ***********************************-->
    <script src="quick/plugins/common/common.min.js"></script>
    <script src="quick/js/custom.min.js"></script>
    <script src="quick/js/settings.js"></script>
    <script src="quick/js/gleek.js"></script>
    <script src="quick/js/styleSwitcher.js"></script>

    <!-- Chartjs -->
    <script src="./quick/plugins/chart.js/Chart.bundle.min.js"></script>
    <!-- Circle progress -->
    <script src=".quick//plugins/circle-progress/circle-progress.min.js"></script>
    <!-- Datamap -->
    <script src="./quick/plugins/d3v3/index.js"></script>
    <script src="./quick/plugins/topojson/topojson.min.js"></script>
    <script src="./quick/plugins/datamaps/datamaps.world.min.js"></script>
    <!-- Morrisjs -->
    <script src="./quick/plugins/raphael/raphael.min.js"></script>
    <script src="./quick/plugins/morris/morris.min.js"></script>
    <!-- Pignose Calender -->
    <script src="./quick/plugins/moment/moment.min.js"></script>
    <script src="./quick/plugins/pg-calendar/js/pignose.calendar.min.js"></script>
    <!-- ChartistJS -->
    <script src="./quick/plugins/chartist/js/chartist.min.js"></script>
    <script src="./quick/plugins/chartist-plugin-tooltips/js/chartist-plugin-tooltip.min.js"></script>



    <script src="./quick/js/dashboard/dashboard-1.js"></script>

</body>

</html>